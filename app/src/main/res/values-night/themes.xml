<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SIMBANK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="BackgroundPrimaryColor">
        <item name="android:background">#60686C</item>
    </style>
    <style name="hol1">
        <item name="android:background">#D8D8D8</item>
    </style>
    <style name="hol2">
        <item name="android:background">#004AAC</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="CaptionText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="BodyText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="resumText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/primary_button</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_button</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/primary_button</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="DeleteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AcceptButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/green</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="DeleteCard" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/primary_button</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TertiaryButton" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="FormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/error</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <style name="FormTextInputLayoutInfoCard" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="CardViewWithICon">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="cardBackgroundColor">@color/primary_button</item>

    </style>

</resources>