<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewMovement"

    android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp"
    android:backgroundTint="@color/secondary_light_60"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMovement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/arrow_lose"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mecánico"
            card_view:layout_constraintStart_toEndOf="@+id/ivArrow"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+350,00€"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/recordDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayer"
            android:layout_marginStart="10dp"
            card_view:layout_constraintStart_toEndOf="@id/ivArrow"
            card_view:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:dividerColor="@color/background_dark"
            card_view:layout_constraintBottom_toBottomOf="@id/recordDate"
            android:layout_marginTop="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>