<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_credit_card"
    android:layout_marginHorizontal="70dp"
    android:backgroundTint="@color/backgroundColor"
    card_view:cardCornerRadius="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background">

        <FrameLayout
            android:id="@+id/ivCreditCard"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="#DADADA"
            android:layout_marginHorizontal="25dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
             />

        <FrameLayout
            android:id="@+id/tvBBVA"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="#C8C8C9"
            android:layout_marginTop="10dp"
            card_view:layout_constraintTop_toTopOf="@+id/ivCreditCard"
            card_view:layout_constraintStart_toStartOf="@id/ivCreditCard"
             />

        <FrameLayout
            android:id="@+id/tvTipo"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:background="#C8C8C9"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/ivCreditCard"
            />

        <FrameLayout
            android:id="@+id/ivCredit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            card_view:layout_constraintHorizontal_bias="0.4"
            android:background="#C8C8C9"
            card_view:layout_constraintEnd_toStartOf="@+id/txtCardNumber"
            card_view:layout_constraintStart_toStartOf="@id/ivCreditCard"
            card_view:layout_constraintTop_toBottomOf="@+id/tvBBVA" />

        <FrameLayout
            android:id="@+id/txtCardNumber"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:background="#C8C8C9"
            card_view:layout_constraintBottom_toBottomOf="@+id/ivCreditCard"
            card_view:layout_constraintEnd_toEndOf="@+id/ivCreditCard"
            card_view:layout_constraintTop_toTopOf="@+id/ivCreditCard"
            card_view:layout_constraintVertical_bias="0.421" />

        <FrameLayout
            android:id="@+id/txtCardCaducity"
            android:layout_width="50dp"
            android:layout_height="8dp"
            android:background="#C8C8C9"
            card_view:layout_constraintBottom_toBottomOf="@+id/ivCreditCard"
            card_view:layout_constraintStart_toStartOf="@+id/ivCreditCard"
            card_view:layout_constraintTop_toBottomOf="@+id/txtCardNumber"
            card_view:layout_constraintVertical_bias="0.839" />

        <FrameLayout
            android:id="@+id/tvUser"
            android:layout_width="130dp"
            android:layout_height="8dp"
            android:layout_marginBottom="5dp"
            android:background="#C8C8C9"
            card_view:layout_constraintBottom_toTopOf="@+id/txtCardCaducity"
            card_view:layout_constraintStart_toStartOf="@id/ivCreditCard" />

        <FrameLayout
            android:id="@+id/tvVisa"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="#C8C8C9"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>