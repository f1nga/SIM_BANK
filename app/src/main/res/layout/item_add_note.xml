<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputNota"
            style="@style/FormTextInputLayout"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="43dp"
            app:boxStrokeWidth="0dp"
            android:textColorHint="@color/white"
            android:background="@color/backgroundColor_secondary"
            app:endIconMode="clear_text"
            app:endIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNotaText"
                style="@style/FormEditText"
                android:layout_width="match_parent"
                android:hint="Nota"
                android:layout_height="47dp"
                android:imeOptions="actionNext" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            android:backgroundTint="@color/secondary_text">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_remove" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAccept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            android:backgroundTint="@color/secondary_text">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_tick" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info_icon_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            style="@style/BodyText"
            android:textColor="@color/tertiary_text"
            android:text="MÃ¡x. 60 caracteres" />
    </LinearLayout>
</LinearLayout>