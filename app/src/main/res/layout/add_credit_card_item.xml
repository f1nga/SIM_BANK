<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAdd_view"
    android:outlineProvider="none"
    android:elevation="0dp"
    android:backgroundTint="@color/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@color/backgroundColor">

        <Button
            android:id="@+id/button"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:text="Contratar"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/cardImageView"
            android:layout_width="274dp"
            android:layout_height="154dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/visadebito" />

        <TextView
            android:id="@+id/cardType"
            android:padding="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:text="Tarjeta de credito"
            android:textSize="20sp"
            android:textColor="@color/cardview_light_background"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/cardImageView">
        </TextView>

        <TextView
            android:id="@+id/cardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:text="Perfecta para viajar por todo el mundo"
            android:textSize="15sp"
            android:textColor="@color/cardview_light_background"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/cardType">
        </TextView>

        <TextView
            android:id="@+id/cardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:text="Perfecta para viajar por todo el mundo"
            android:textSize="12sp"
            android:textColor="@color/cardview_light_background"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            card_view:layout_constraintTop_toBottomOf="@id/cardInfo">
        </TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>