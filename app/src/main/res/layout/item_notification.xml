<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvNotiDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            style="@style/TitleText"
            tools:text="27 de marzo de 2023"/>

        <ImageView
            android:id="@+id/tvNotiReaded"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_small_circle"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tvNotiTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TitleText"
            android:gravity="start"
            android:textColor="@color/primary_button"
            tools:text="Pagament bizum"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginEnd="15dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tvNotiDescription"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColor="@color/tertiary_text"
        android:textSize="16sp"
        android:gravity="start"
        android:fontFamily="@font/montserrat"
        tools:text="Has recibido un bizum de joan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tvNotiMarkAsReaded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primary_button"
            android:textSize="16sp"
            android:gravity="start"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:text="Marcar como leÃ­do"/>

        <ImageView
            android:id="@+id/ivDeleteNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_blue"
            android:layout_marginEnd="15dp"/>


    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tertiary_text" />

</LinearLayout>